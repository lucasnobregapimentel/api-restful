generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  Comment       Comment[]

  @@map("users")
}

model Post {
  id      String    @id @default(uuid())
  title   String
  content String
  Comment Comment[]

  @@map("posts")
}

model Comment {
  id      String @id @default(uuid())
  content String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  @@map("comments")
}
